class Order:
cisla =
cisla = input("Zadej čísla pro seřazení (oddělená čárkou):")
cisla = cisla.split(",")                        # ['0', ' -2', ' 10', ' 1', ' -8', ' 18', ' 3']
final = []
for item in cisla:
    item = item.strip()
    final.append(int(item))
final = sorted(final)
final = ", ".join([str(x) for x in final])
print(final)


"0, -2, 10, 1, -8, 18, 3"